<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/siteEditor"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/siteID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:hint="아이디를 입력하시오"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:text="사이트 관리"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/sitePW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="비밀번호를 입력하시오"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/siteID"
        app:layout_constraintStart_toStartOf="@+id/siteID"
        app:layout_constraintTop_toBottomOf="@+id/siteID" />

    <EditText
        android:id="@+id/sitePW2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="비밀번호를 입력하시오"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/sitePW"
        app:layout_constraintStart_toStartOf="@+id/sitePW"
        app:layout_constraintTop_toBottomOf="@+id/sitePW" />

    <Button
        android:id="@+id/btn_editor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="수정"
        app:layout_constraintStart_toStartOf="@+id/sitePW2"
        app:layout_constraintTop_toBottomOf="@+id/sitePW2" />

    <Button
        android:id="@+id/btn_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="삭제"
        app:layout_constraintEnd_toEndOf="@+id/sitePW2"
        app:layout_constraintStart_toEndOf="@+id/btn_editor"
        app:layout_constraintTop_toBottomOf="@+id/sitePW2" />
</androidx.constraintlayout.widget.ConstraintLayout>